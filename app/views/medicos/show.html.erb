<p style="color: green"><%= notice %></p>

<%= render @medico %>

<div>
  <h2>Consultas:</h2>
  <% @medico.consultas.each do |consulta| %>
    <p><%= consulta.data %></p>
    <p><%= consulta.paciente.nome %></p>
  <% end %>
</div>

<div>
  <%= link_to "Edit this medico", edit_medico_path(@medico) %> |
  <%= link_to "Back to medicos", medicos_path %>

  <%= button_to "Destroy this medico", @medico, method: :delete %>
</div>
